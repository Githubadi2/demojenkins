

<project name="FirstProject" default="dist">

	<target name="clean" >

			<delete dir="build/classes"/>
			<delete dir="build/jar"/>

	</target>

			<target name="init" depends="clean">
			<mkdir dir="build/classes"/>
			<mkdir dir="build/jar"/>


  </target>

			<target name="compile" depends="init">

					<javac srcdir="demjenkins/src" includeantruntime="false"
						destdir="build/classes"/>
         

				 </target>

					<target name="war" depends="compile" >

					<war destfile="build/jar/appl.jar" basedir="build/classes" />

			</target>


					<target name="copywebfiles">

					<copy todir="build/web">
					     <fileset dir="example">

						</fileset>
						</copy>

			</target>

		<target name="dist" depends="jar,copywebfiles">

		   <zip destfile="dist/test.zip">
             <fileset dir="build/web"/>
			 <fileset dir="build/jar"/>

			 
			 </zip>

			 </target>


	</project>

